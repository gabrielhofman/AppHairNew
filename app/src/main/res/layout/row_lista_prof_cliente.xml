<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear1">


        <ImageView
            android:id="@+id/fotoProfCliente"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/saloon"
            />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linear2"
            >

            <TextView
                android:id="@+id/labelNomeProfCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nome do profissional"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/labelCidadeProfCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:textSize="18dp"
                android:layout_below="@+id/labelNomeProfCliente"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>