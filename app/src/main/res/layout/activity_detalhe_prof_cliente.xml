<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.DetalheProfCliente"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/Widget.AppCompat.ActionBar"
            app:titleTextColor="#ffffff"
            android:id="@+id/toolbar"></android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/lin_cab">

                <ImageView
                    android:id="@+id/fotoProfDetCliente"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/saloon"
                    android:padding="2dp"/>

                    <TextView
                        android:id="@+id/centralizador5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/lin_cab"
                        />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        >

                <TextView
                    android:id="@+id/centralizador"
                    android:layout_width="50dp"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/lin_cab"
                    />

                <TextView
                    android:id="@+id/labelSobreEstabProfDetCliente"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Sobre o estabelecimento:"
                    android:textSize="18dp"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/centralizador"/>


                <TextView
                    android:id="@+id/labelNomeEstabDetCliente"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Nome do estabelecimento"
                    android:textSize="18dp"
                    android:layout_below="@id/labelSobreEstabProfDetCliente"
                    />

                <TextView
                    android:id="@+id/labelDescEstabProfDetCliente"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:hint="Descrição do estabelecimento"
                    android:textSize="18dp"
                    android:layout_below="@id/labelNomeEstabDetCliente"
                    android:singleLine="false"
                    />
                </LinearLayout>

        </LinearLayout>

                <TextView
                    android:id="@+id/espacoVazio3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/lin_cab"
                    />


                <TextView
                    android:id="@+id/labelEnderecoProfDetCliente"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Endereço:"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_below="@+id/espacoVazio3"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelEnderecoProfDetCliente"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear2">

                    <TextView
                        android:id="@+id/labelCEPProfDetCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="CEP"
                        android:textSize="18dp"
                        android:layout_below="@id/labelEnderecoProfDetCliente"
                        />

                    <TextView
                        android:id="@+id/labelVirg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint=", "
                        android:textSize="18dp"
                        android:layout_below="@id/labelCEPProfDetCliente"
                        />

                    <TextView
                        android:id="@+id/labelUFProfDetCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="Estado"
                        android:textSize="18dp"
                        android:layout_below="@id/labelVirg1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear3">

                <TextView
                    android:id="@+id/labelCidadeProfDetCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Cidade"
                    android:textSize="18dp"
                    android:layout_below="@id/linear2"/>

                    <TextView
                        android:id="@+id/labelVirg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint=", "
                        android:textSize="18dp"
                        android:layout_below="@id/labelCidadeProfDetCliente"
                        />


                    <TextView
                        android:id="@+id/labelBairroProfDetCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="Bairro"
                        android:textSize="18dp"
                        android:layout_below="@id/labelCidadeProfDetCliente"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear3"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear4">

                <TextView
                    android:id="@+id/labelRuaProfDetCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Rua"
                    android:textSize="18dp"
                    android:layout_below="@id/linear4"
                    />

                    <TextView
                        android:id="@+id/labelVirg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint=", "
                        android:textSize="18dp"
                        android:layout_below="@id/labelRuaProfDetCliente"
                        />

                <TextView
                    android:id="@+id/labelNumeroProfDetCliente"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Número"
                    android:textSize="18dp"
                    android:layout_below="@id/labelVirg3"
                    />

                </LinearLayout>

                <TextView
                    android:id="@+id/labelComplementoProfDetCliente"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Complemento"
                    android:textSize="18dp"
                    android:layout_below="@id/linear4"
                    />


                <TextView
                    android:id="@+id/espacoVazio4"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/labelComplementoProfDetCliente"
                    />
                <Button
                    android:id="@+id/botaoMarcarHrProfDetCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marcar horário"
                    android:layout_below="@+id/espacoVazio4"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:theme="@style/AppTheme.Button"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/botaoMarcarHrProfDetCliente"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navigation_view"
        app:menu="@menu/menu_lateral_cliente"
        app:headerLayout="@layout/drawer_header">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>