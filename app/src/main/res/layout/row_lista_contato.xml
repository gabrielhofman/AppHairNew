<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear1">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/fotoContato"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/saloon"
            />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/centralizador"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"

            />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linear2"
            >

            <TextView
                android:id="@+id/labelNomeContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nome e Sobrenome"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/labelTelefoneContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="(XX) XXXXX-XXXX"
                android:textSize="18dp"
                android:layout_below="@+id/labelNomeContato"/>


        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>